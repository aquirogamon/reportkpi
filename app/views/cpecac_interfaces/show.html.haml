.margin-top-20
%div.container
  .row.col-md-4
    %p
      - if @cpecac_interface.weeks > 3
        %b.text-danger #{@cpecac_interface.weeks}
      - else
        %b #{@cpecac_interface.weeks}
      %b Semanas con alta ocupación

%div.container
  .row.col-md-2
    %p
      %b ID:
    %p
      %b Index Opm:
    %p
      %b Equipo:
    %p
      %b Puerto:
    %p
      %b Capacidad Gbps:
    %p
      %b Servicio:
    %p
      %b RX Gbps:
    %p
      %b TX Gbps:
    %p
      %b % Utilización:
    %p
      %b % Crecimiento:
    %p
      %b Comentario:
    %p
      %b Fecha de Solución:
  .row.col-md-10
    %p
      = @cpecac_interface.id
    %p
      = @cpecac_interface.index_opm
    %p
      = @cpecac_interface.device
    %p
      = @cpecac_interface.port
    %p
      = @cpecac_interface.egressRate
    %p
      = @cpecac_interface.servicio
    %p
      = @cpecac_interface.gbpsrx
    %p
      = @cpecac_interface.gbpstx
    %p
      = @cpecac_interface.status
    %p
      = @cpecac_interface.crecimiento
    %p
      = @cpecac_interface.comment
    %p
      = @cpecac_interface.time

%div.container
  .margin-top-20
  = link_to 'Editar', edit_cpecac_interface_path(@cpecac_interface), class: 'btn btn-sm btn-success'
  = link_to 'Volver', cpecac_interfaces_path, class: 'btn btn-sm btn-success'
  .margin-top-20

