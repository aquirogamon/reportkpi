%div.container
  %h3.margin-top-10
    Tráfico por Cola del equipo:
    %b.text-danger #{@ipranaccess_qosegressinterface.device}
    SAP:
    %b.text-danger #{@ipranaccess_qosegressinterface.sap}


.margin-top-20
%div.container
  .row.col-md-3
    %i.fa.fa-calendar
    %b Ingresar rango de busqueda
    %input#reportrange{:style => "background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%", :type => "text"}


.margin-top-20
%div.container
  .row.col-md-4
    %p
      - if @ipranaccess_qosegressinterface.weeks > 3
        %b.text-danger #{@ipranaccess_qosegressinterface.weeks}
      - else
        %b #{@ipranaccess_qosegressinterface.weeks}
      %b Semanas con Drops

.margin-top-30
%div.margin-left-50
  = line_chart [{name: "Cola 1", data: @chart_discard_1}, {name: "Cola 2", data: @chart_discard_2}, {name: "Cola 3", data: @chart_discard_3}, {name: "Cola 4", data: @chart_discard_4}, {name: "Cola 5", data: @chart_discard_5}, {name: "Cola 6", data: @chart_discard_6}, {name: "Cola 7", data: @chart_discard_7}], legend: true, xtitle: "Fecha - Hora", ytitle: "Descarte por Cola - Egress (Mbps)", download: {filename: "Drop por Cola de - #{@ipranaccess_qosegressinterface.device} - #{@ipranaccess_qosegressinterface.sap}"}

.margin-top-30
%div.margin-left-50
  = line_chart [{name: "Cola 1", data: @chart_bps_max_1}, {name: "Cola 2", data: @chart_bps_max_2}, {name: "Cola 3", data: @chart_bps_max_3}, {name: "Cola 4", data: @chart_bps_max_4}, {name: "Cola 5", data: @chart_bps_max_5}, {name: "Cola 6", data: @chart_bps_max_6}, {name: "Cola 7", data: @chart_bps_max_7}], legend: true, xtitle: "Fecha - Hora", ytitle: "Tráfico por Cola - Egress (Mbps)", download: {filename: "Tráfico por Cola de - #{@ipranaccess_qosegressinterface.device} - #{@ipranaccess_qosegressinterface.sap}"}

.margin-top-30
%div.container
  .row.col-md-3
    %p
      %b Nombre del Equipo:
    %p
      %b SAP (SubInterface):
    %p
      %b Cola de Servicio:
    %p
      %b Tráfico Mbps:
    %p
      %b Paquetes Descartados OUT:
    %p
      %b AVG Paquetes Descartados OUT:
    %p
      %b Medio de Transmición:
    %p
      %b Fecha de Solución:
    %p
      %b Comentarios:
  .row.col-md-9
    %p
      = @ipranaccess_qosegressinterface.device
    %p
      = @ipranaccess_qosegressinterface.sap
    %p
      = @ipranaccess_qosegressinterface.queueId
    %p
      = @ipranaccess_qosegressinterface.bps_max
    %p
      = @ipranaccess_qosegressinterface.discard
    %p
      = @ipranaccess_qosegressinterface.discard_avg
    %p
      = @ipranaccess_qosegressinterface.tx_provider.name
    %p
      = @ipranaccess_qosegressinterface.time
    %p
      = @ipranaccess_qosegressinterface.comment


%div.container
  .margin-top-20
  = link_to 'Volver', ipranaccess_qosegressinterfaces_path, class: 'btn btn-sm btn-success'

= form_tag @ipranaccess_qosegressinterface, method: :get do
  = hidden_field_tag :start
  = hidden_field_tag :end
